{% extends 'base.html.twig' %}

{% block title %}Nos articles{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Categories</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
{% if categories is not null and categories|length > 0 %}
            <ul class="navbar-nav">
                {% for category in categories %}
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{path('category-detail', {id: category.id })}}">{{ category.name}}</a>
                </li>
                {% endfor %}

            </ul>
{% endif %}

            </div>
        </div>
        </nav>
        
        {% if articles|length > 0 %}
        <div class="row row-book mt-5">
        {% for article in articles %}
            {# <div class="col-6 col-md-4 col-xl-3">
                <a href="#">
                    <img src="" alt="#" class="img-fluid w-100">
                </a>
            </div> #}
            <div class="card m-3" style="width: 18rem;">
            <a href="{{ path('article-detail', {'id': article.id}) }}">
            <img src="{{ asset('images/articles/' ~ article.imageName) }}" class="card-img-top"  alt="...">
            </a>
            <div class="card-body d-flex flex-wrap">
                <div>
                    <h5 class="card-title d-block">{{article.name}}</h5>
                    <p class="card-text w-100">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <a href="#" class="btn btn-primary align-self-end mt-3">Go somewhere</a>
            </div>
            </div>
        {% endfor %}

        
        </div>
        
{% else %}
<p>Il n'y a pas d'articles dans la BDD</p>




{% endif %}

{% endblock %}
