{% extends 'base-admin.html.twig' %}

{% block title %}Apropos{% endblock %}

{% block body %}
    <a href="{{ path('admin_apropos_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>A propos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ apropo.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ apropo.imageName }}</td>
            </tr>
            <tr>
                <th>Mis à jour le </th>
                <td>{{ apropo.updatedAt ? apropo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ apropo.description }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ apropo.title }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_apropos_edit', {'id': apropo.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin_apropos/_delete_form.html.twig') }}
{% endblock %}
