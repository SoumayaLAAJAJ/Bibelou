{% extends 'base-admin.html.twig' %}

{% block title %}Apropos index{% endblock %}

{% block body %}
    <a href="{{ path('admin_apropos_new') }}" class="btn btn-dark mb-3">Créer nouveau contenu</a>
    <h1>A propos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>Description</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apropo in apropos %}
            <tr>
                <td>{{ apropo.id }}</td>
                <td>{{ apropo.imageName }}</td>
                <td>{{ apropo.updatedAt ? apropo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ apropo.description }}</td>
                <td>{{ apropo.title }}</td>
                <td>
                    <a href="{{ path('admin_apropos_show', {'id': apropo.id}) }}" class="btn btn-primary">Voir le rendu</a>
                    <a href="{{ path('admin_apropos_edit', {'id': apropo.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
