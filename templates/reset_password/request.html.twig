{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
    
        <h3 class="my-5 text-center">Réinitialisez votre mot de passe</h3>

            <div>
                <p>
                    Veuillez entrer votre adresse mail et vous receverez un mail contenant un lien pour réinitialiser votre mot de passe.
                </p>
            </div>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}

            <button class="btn btn-primary">Envoyer le mail de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
