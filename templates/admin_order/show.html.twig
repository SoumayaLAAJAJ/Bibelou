{% extends 'base-admin.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <a href="{{ path('admin_order_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CarrierName</th>
                <td>{{ order.carrierName }}</td>
            </tr>
            <tr>
                <th>CarrierPrice</th>
                <td>{{ order.carrierPrice }}</td>
            </tr>
            <tr>
                <th>Delivery</th>
                <td>{{ order.delivery }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ order.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ order.state ? 'En préparation' : 'En livraison' }}</td>
            </tr>
            <tr>
                <th>IsDelivered</th>
                <td>{{ order.isDelivered ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_order_edit', {'id': order.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin_order/_delete_form.html.twig') }}
{% endblock %}
