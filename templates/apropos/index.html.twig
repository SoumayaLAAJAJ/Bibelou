{% extends 'base.html.twig' %}

{% block title %}A propos{% endblock %}

{% block body %}

{% for apropo in apropos %}
<div class="container">
        <h3 class="text-center my-5">{{ apropo.title }}</h3>
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-8 d-flex justify-content-center">
            <img src="{{ asset('images/apropos/' ~ apropo.imageName) }}" class="w-50 align-self-center" alt="">
        </div>
        <div class="col-12 col-md-6 my-5">
            {{ apropo.description }}
        </div>
    </div>

</div>
{% endfor %}
{% endblock %}


