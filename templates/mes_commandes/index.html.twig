{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{path('profile')}}">Mes infos</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('edit-profile')}}">Modifier mon compte</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('favoris')}}">Mes favoris</a>
                </li>
                <li class="nav-item">
                <a href="{{path('cart')}}" class="nav-link">Mon panier</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('mes_commandes')}}">Mes commandes</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


{% if orders|length == 0 %}
            <p>Vous n'avez pas encore passer de commandes sur Bibelou. </p>
{% else %}
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">Passée le : </th>
                    <th scope="col">Référence :</th>
                    <th scope="col">Article.s : </th>
                    <th scope="col">Total : </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td>{{order.createdAt|date('d/m/Y')}}</td>
                    <td>{{order.reference}}</td>
                    <td>{{order.orderDetails|length}}</td>
                    <td>{{(order.carrierPrice + order.getTotal)|number_format(2, ',', '.')}} €</td>
                    <td class="text-end"> <a href="{{path('detail_commande', {'reference' : order.reference})}}">Voir ma commande</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

{% endif %}

{% endblock %}
