{% extends 'base-admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <a href="{{ path('admin_article_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>

                {% for color in article.colors %}
                <div style="width:20px; height:20px; background-color:{{color.field}}"></div>
                
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ article.Size }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.imageName }}</td>
            </tr>
            <tr>
                <th>Mis à jour le </th>
                <td>{{ article.updatedAt ? article.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}

